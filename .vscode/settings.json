{
  "python.formatting.autopep8Args": [
    "--max-line-length=120"
  ],
  "python.linting.mypyEnabled": true,
  "python.sortImports.args": [
    "--line-width=120"
  ],
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
  },
  "editor.formatOnSave": true,
  "python.formatting.provider": "yapf",
}